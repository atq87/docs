{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**/**.dll"
          ],
          "exclude": [
            "**/obj/**",
            "_site/**"
          ]
        }
      ],
      "dest": "api-reference"
    }
],

  "build": {
    "markdownEngineName": "markdig",

    "content": [
      {
        "files": [
          "api-reference/**.yml",
          "api-reference/index.md"
        ],
		"dest": "biml"
      },

      {
        "files": [ "hc/en-us/search/index.md" ],
        "src": "generated-search",
        "dest": "hc/en-us/search"
      },

      {
        "files": [ "**/*.yml" ],
        "src": "generated-bimlflex",
        "dest": "bimlflex",
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**docfx/**"
        ]
      },
      {

        "files": [
          "**index.md",
          "**toc.yml",
          "**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**docfx/**",
          "**posts/**",
          "**/**readme.md"
        ],
        "cwd": "../"
    }
    ],

    "resource": [
      {
        "files": [
          "bimlflex/metadata-editors/images/**",
          "bimlflex/user-guide/images/**",
          "bimlflex/user-guide/resources/**",
          "bimlexpress/images/**",
          "content/**",
          "images/**",
          "biml/language-reference/*.png"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**docfx/**"
        ],
        "cwd": "../"
      }
    ],

    "overwrite-placeholder": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**"
        ]
      }
    ],

    "dest": "_site",
    "template": [
      "templates/varigence-template-html"
    ],
    "globalMetadata": 
    {
      "_disableContribution": true,
      "_appFaviconPath": "images/favicon.png",
      "_enableSearch" : true
    }
  },
}