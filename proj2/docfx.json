{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**/**.dll"
          ],
          "exclude": [
            "**/obj/**",
            "_site/**"
          ]
        }
      ],
      "dest": "api-reference"
    }
],

  "build": {
    "markdownEngineName": "markdig",

    "content": [
      {
        "files": [
          "api-reference/**.yml",
          "api-reference/index.md"
        ],
		"dest": "biml"
      },

      {
        "files": [ "**/*.yml" ],
        "src": "generated-bimlflex",
        "dest": "bimlflex",
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**proj2/**"
        ]
      },
      {

        "files": [
          "**index.md",
          "**toc.yml",
          "**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**proj2/**",
          "**posts/**",
          "**/**readme.md"
        ],
        "cwd": "../"
    }
    ],

    "resource": [
      {
        "files": [
          "bimlflex/user-guide/images/**",
          "bimlexpress/images/**",
          "content/**",
          "images/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**proj2/**"
        ],
        "cwd": "../"
      }
    ],

    "overwrite-placeholder": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**"
        ]
      }
    ],

    "dest": "_site",
    "template": [
      "templates/varigence-template-html"
    ],
    "globalMetadata": 
    {
      "_enableSearch":true,
      "_disableNavbar": false,
      "_disableBreadcrumb":false,
      "_disableToc":false,
      "_disableContribution": true,
      "_appFaviconPath": "images/favicon.png",
      "_appTitle": "Varigence Docs",
      "_appFooter": "<span>Varigence 2019</span>",
      "_appLogoPath": "images/varigencelogo.png"
    }
  },

  "pdf": {
    "markdownEngineName": "markdig",
    "template": [
      "templates/pdf.default",
      "templates/varigence-template-pdf"
    ],

    "content": [
      {
        "files": [
          "**index.md",
          "**toc.yml",
          "**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**_pdf/**",
          "**proj2/**",
          "**posts/**",
          "**/**readme.md"
        ],
        "cwd": "../"
      },
      {
        "files": "pdf/toc.yml"
      }
    ],
    "resource": [
      {
        "files": [
          "bimlflex/user-guide/images/**",
          "bimlexpress/images/**",
          "content/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**proj2/**"
        ],
        "cwd": "../"
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_pdf/**"
        ]
      }
    ],
    "dest": "_pdf"
  }

}