{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "bimlstudio/**.cs"
          ],
          "exclude": [
            "**/obj/**",
            "_site/**"
          ]
        }
      ],
      "dest": "bimlstudio/reference-documentation"
    },

    {
    "src": [
      {
        "files": [
          "bimlflex/reference-documentation/**.cs"
        ],
        "exclude": [
          "**/obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "generated-bimlflex/reference-documentation"
  }
],

  "build": {
    "markdownEngineName": "markdig",

    "content": [
      {
        "files": [ "**/*.yml" ],
        "src": "generated-bimlflex",
        "dest": "bimlflex",
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**proj2/**"
        ]
      },
      {

        "files": [
          "**index.md",
          "**toc.yml",
          "**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**proj2/**",
          "**posts/**",
          "**/**readme.md"
        ],
        "cwd": "../"
    }
    ],

    "resource": [
      {
        "files": [
          "bimlflex/user-guide/images/**",
          "bimlexpress/images/**",
          "content/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**proj2/**"
        ],
        "cwd": "../"
      }
    ],

    "overwrite-placeholder": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_site/**"
        ]
      }
    ],

    "dest": "_site",
    "template": [
      "templates/varigence-template-html"
    ],
    "globalMetadata": 
    {
      "_disableContribution": true
    }
  },

  "pdf": {
    "markdownEngineName": "markdig",
    "template": [
      "templates/pdf.default",
      "templates/varigence-template-pdf"
    ],

    "content": [
      {
        "files": [
          "**index.md",
          "**toc.yml",
          "**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**_pdf/**",
          "**proj2/**",
          "**posts/**",
          "**/**readme.md"
        ],
        "cwd": "../"
      },
      {
        "files": "pdf/toc.yml"
      }
    ],
    "resource": [
      {
        "files": [
          "bimlflex/user-guide/images/**",
          "bimlexpress/images/**",
          "content/**"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "**_site/**",
          "**proj2/**"
        ],
        "cwd": "../"
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "**/bin/**",
          "**/obj/**",
          "_pdf/**"
        ]
      }
    ],
    "dest": "_pdf"
  }

}